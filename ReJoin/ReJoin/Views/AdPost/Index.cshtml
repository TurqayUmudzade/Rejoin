                                        <label class="form-label text-dark">Monthly Salary</label>
                                        <div class="row gutters-xs">
                                            <div class="col-6">
                                                <input type="number" class="form-control" name="minSalary" placeholder="Min" required>
                                            </div>
                                            <div class="col-6">
                                                <input type="number" class="form-control"name="mSalary" placeholder="Max" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label class="form-label text-dark">Experience</label>
                                        <div class="row gutters-xs">
                                            <div class="col-6">
                                                <select class="form-control select2-no-search custom-select" name="exprience" required>
                                                    <option value="">Min</option>
                                                    <option value="1">0</option>
                                                    <option value="2">1</option>
                                                    <option value="3">2</option>
                                                    <option value="4">3</option>
                                                    <option value="5">4</option>
                                                    <option value="6">5</option>
                                                    <option value="7">6</option>
                                                    <option value="8">7</option>
                                                    <option value="9">8</option>
                                                    <option value="10">9</option>
                                                    <option value="11">10</option>
                                                    <option value="12">11</option>
                                                </select>
                                            </div>
