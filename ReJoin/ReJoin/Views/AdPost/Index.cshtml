                                                <option value="Full Time Jobs">Full Time Jobs</option>
                                                <option value="Part Time Jobs">Part Time Jobs</option>
                                                <option value="Work From Home">Work From Home</option>
                                                <option value="Internships">Internships</option>
                                            </optgroup>
                                        </select>
                                    </div>
                                </div>
