                <div class="card">
                    <div class="card-body">
                        <form class="input-group" method="post" action="@Url.Action("Search")">
                            <input type="text" class="form-control br-tl-3 br-bl-3" name="searchstring" placeholder="Search">
                            <div class="input-group-append ">
                                <button type="submit" class="btn btn-primary br-tr-3 br-br-3">
                                    Search
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
